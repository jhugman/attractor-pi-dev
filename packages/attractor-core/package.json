{
  "name": "@attractor/core",
  "version": "0.1.0",
  "description": "DOT-based pipeline runner for orchestrating multi-stage AI workflows",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run --exclude '**/smoke-*'",
    "test:smoke": "vitest run --passWithNoTests smoke-test",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
