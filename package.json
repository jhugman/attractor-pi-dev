{
  "name": "attractor",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:smoke": "pnpm -r test:smoke",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "build:dist": "pnpm --filter @jhugman/attractor-pi build",
    "publish:dist": "pnpm build:dist && npm -C packages/attractor-pi publish --access public"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@9.15.0"
}
